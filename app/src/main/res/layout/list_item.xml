<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="24px"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_item_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:background="@drawable/imager_bg"
        android:cropToPadding="true"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/adidas" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/list_item_title"
            android:layout_width="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="lahjhsdj hjaskh asas as asbvb kdj ak bvbcnbsjd askdkjl asdlkj asdlkkjasdd lkkjssd lkkjasd,"
            android:textColor="@android:color/black"
            android:textSize="30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="dasdv asdasdda sdasdasdds"
            android:textColor="@android:color/black"
            android:textSize="24px"
            android:textStyle="normal" />
    </LinearLayout>



</LinearLayout>